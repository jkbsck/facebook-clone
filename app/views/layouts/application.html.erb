<!DOCTYPE html>
<html>
  <head>
    <title>Social Side</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Paytone+One&display=swap');
    </style>
  </head>

  <body>
    <%# <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path unless user_signed_in? %>

    <div class="notification-container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

    <% if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      <%= current_user.email %> is signed in.
    <%# <% else %> %>
      <%# <%= link_to "Log In", new_user_session_path %>
      <%# <%= link_to "Sign Up", new_user_registration_path %>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to "Posts", posts_path %>
      <%= link_to "My Profile", profile_path(id: current_user.profile) %>
    <% end %>

    <%# <p style="background-color: pink">
      <b>PARAMS: </b><%= params if params.present? %>
    <%# </p> %>

    <%= render 'layouts/navbar' if user_signed_in? %>

    <%= yield %>
  </body>
</html>
